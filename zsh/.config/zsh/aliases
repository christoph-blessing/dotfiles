if type doas > /dev/null; then
    alias sudo=doas
fi

if type exa > /dev/null; then
    alias ls=exa
fi
alias ll="ls -la"

if type bat > /dev/null; then
    alias cat="bat"
fi

alias mbsync="mbsync --config ~/.config/mbsync/mbsyncrc"

if type nvim > /dev/null; then
    alias vim="nvim"
fi

alias mutt="neomutt"

alias nb="newsboat"

alias df="df -h"

alias fzf="fzf-tmux"

alias gpg2="gpg2 --homedir $XDG_DATA_HOME/gnupg"

alias xbindkeys="xbindkeys -f $XDG_CONFIG_HOME/xbindkeys/config"

alias gs="git status"
alias gl="git log"
alias ga="git add"
alias gc="git commit"
alias gd="git diff"
alias gr="git reset"
alias grs="git restore"
alias gps="git push"
alias gpl="git pull"
alias gm="git merge"
alias gb="git branch"
alias gch="git checkout"
alias grb="git rebase"

alias cdv="cd ~/dotfiles/nvim/.config/nvim"
